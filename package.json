{
  "name": "villa-sites-monorepo",
  "version": "1.0.0",
  "workspaces": [
    "villa-components/system",
    "websites/*"
  ],
  "private": true,
  "scripts": {
    "develop": "yarn concurrently -- --",
    "concurrently": "concurrently -P \"yarn start {@}\" \"yarn serve\"",
    "start": "npx lerna run start --scope",
    "build": "npx lerna run build --scope",
    "serve": "npx lerna run start --scope @villa-components/system",
    "build-all": "npx lerna run build",
    "test": "npx lerna run test",
    "generate": "npx lerna run --scope @villa-components/system generate",
    "deploy": "npx lerna run deploy --scope",
    "deploy-all": "npx lerna run deploy"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.7.17",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^6.1.5",
    "@mui/material": "^6.1.5",
    "@strapi/blocks-react-renderer": "^1.0.1",
    "graphql": "^16.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-imask": "^7.5.0",
    "react-markdown": "^8.0.7",
    "react-parallax": "^3.5.1",
    "react-pdf": "^7.1.3",
    "react-responsive-carousel": "^3.2.23",
    "react-router-dom": "^6.14.2",
    "react-visibility-sensor": "^5.1.1",
    "web-vitals": "^3.4.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.1",
    "eslint-config-standard": "latest",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "latest",
    "lerna": "^8.1.2",
    "react-scripts": "^5.0.1",
    "wrangler": "^3.38.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
